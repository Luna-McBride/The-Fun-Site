{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "app": {
  	"buildAssetsDir": "/node_modules/_nuxt/"
  },
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "~": "/<srcDir>",
      "#build": "/<rootDir>/.nuxt",
      "buildAssetsDir": "/node_modules/_nuxt/",
      "modulesDir": ["<rootDir>/node_modules/_nuxt/"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
